def calculator():
    print("ğŸ§® Simple Calculator")

    try:
        num1 = float(input("Enter the first number: "))
        num2 = float(input("Enter the second number: "))
        print("Choose operation: +, -, *, /")
        operation = input("Enter operation: ")

        if operation == '+':
            result = num1 + num2
        elif operation == '-':
            result = num1 - num2
        elif operation == '*':
            result = num1 * num2
        elif operation == '/':
            if num2 != 0:
                result = num1 / num2
            else:
                return "âŒ Error: Division by zero!"
        else:
            return "âŒ Invalid operation."

        return f"âœ… Result: {result}"

    except ValueError:
        return "âŒ Invalid input. Please enter numbers only."

# Run the calculator
print(calculator())
